<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <Button
            android:id="@+id/item_button"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:background="@drawable/rounded_panel"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="0dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/special_img_second"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_alignStart="@+id/item_button"
            android:layout_alignTop="@+id/item_button"
            android:layout_alignEnd="@+id/item_button"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/SkinName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/special_img_second"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:clickable="true"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@id/SkinName"
            android:layout_alignStart="@+id/SkinName"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/document_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:layout_below="@id/price"
            android:layout_alignStart="@+id/SkinName"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>
